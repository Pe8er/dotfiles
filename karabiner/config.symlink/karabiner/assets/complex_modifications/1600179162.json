{
  "title": "PG Personal",
  "rules": [
    {
      "description": "Application > Hyper",
      "manipulators": [
        {
          "from": {
            "key_code": "application",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "CMD + Application > Application",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "application"
              },
              {
                "key_code": "left_command"
              }
            ],
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "application"
            }
          ]
        }
      ]
    },

    {
      "description": "Left Control > Hyper",
      "manipulators": [
        {
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_command", "left_control", "left_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "Keyboard: Reduce GLM Volume",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "shell_command": "/opt/homebrew/bin/sendmidi dev 'IAC' cc 22 1"
          }
        }
      ]
    },

    {
      "description": "Keyboard: Increase GLM Volume",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "shell_command": "/opt/homebrew/bin/sendmidi dev 'IAC' cc 21 1"
          }
        }
      ]
    },

    {
      "description": "Keyboard: Mute GLM",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "page_down",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "shell_command": "/opt/homebrew/bin/sendmidi dev 'IAC' cc 22 1"
          }
        }
      ]
    },

    {
      "description": "Keyboard: CMD + Escape to CMD + grave_accent_and_tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": ["command"]
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 4 to Back",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": "command"
          }
        }
      ]
    },

    {
      "description": "Mouse: Mouse 4 to ESC in PlexAmp and Spark",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^tv\\.plex\\.plexamp$",
                "^com\\.readdle\\.SparkDesktop$"
              ]
            }
          ]
        }
      ]
    },

    {
      "description": "Mouse: CMD + Mouse 4 to Forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "close_bracket",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 3 to Mission Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": {
            "key_code": "mission_control"
          }
        }
      ]
    },
    {
      "description": "Mouse: CMD + Mouse 3 to Show Desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "f11"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 5 to Play/Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": {
            "key_code": "play_or_pause"
          }
        }
      ]
    },

    // {
    //   "description": "Keyboard: Hyper + P to Play / Pause",
    //   "manipulators": [
    //     {
    //       "type": "basic",
    //       "from": {
    //         "key_code": "p",
    //         "modifiers": {
    //           "mandatory": ["command", "shift", "option", "control"]
    //         }
    //       },
    //       "to": {
    //         "key_code": "play_or_pause"
    //       }
    //     }
    //   ]
    // },

    {
      "description": "Keyboard: Hyper + Return to Play / Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "key_code": "play_or_pause"
          }
        }
      ]
    },

    {
      "description": "Keyboard: Hyper + [N] Right to Next Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "key_code": "fastforward"
          }
        }
      ]
    },

    {
      "description": "[NEW]Keyboard: Hyper + Left to Prev Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "key_code": "rewind"
          }
        }
      ]
    },

    {
      "description": "Mouse: CMD + Mouse 5 to Next Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "fastforward"
          }
        }
      ]
    },
    {
      "description": "Mouse: OPT + Mouse 5 to Previous Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": "option"
            }
          },
          "to": {
            "key_code": "rewind"
          }
        }
      ]
    }
  ]
}
