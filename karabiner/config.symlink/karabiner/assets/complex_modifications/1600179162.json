{
  "title": "PG Personal",
  "rules":
  [
    {
      "description": "HHKB: Command + Escape to Command + grave_accent_and_tilde",
      "manipulators":
      [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": "command"
          },
          "to":
          {
            "key_code": "grave_accent_and_tilde",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Razer Basilisk: Mouse 3 to Mission Control",
      "manipulators":
      [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to":
          {
            "key_code": "mission_control"
          }
        }
      ]
    },
    {
      "description": "Razer Basilisk: Command + Mouse 3 to Show Desktop",
      "manipulators":
      [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers":
            {
              "mandatory": "command"
              }
          },
          "to":
          {
            "key_code": "f11"
          }
        }
      ]
    },
    {
      "description": "Razer Basilisk: Mouse 4 to Back",
      "manipulators":
      [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Razer Basilisk: Mouse 5 to Forward",
      "manipulators":
      [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to":
          {
            "key_code": "close_bracket",
            "modifiers": "command"
          }
        }
      ]
    }
  ]
}
