{
  "title": "PG Personal",
  "rules": [
    {
      "description": "HHKB: CMD + Escape to CMD + grave_accent_and_tilde",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": "command"
          },
          "to": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 4 to Back",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": {
            "key_code": "open_bracket",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 4 to ESC in PlexAmp",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^tv\\.plex\\.plexamp$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Mouse: CMD + Mouse 4 to Forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "close_bracket",
            "modifiers": "command"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 3 to Mission Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": {
            "key_code": "mission_control"
          }
        }
      ]
    },
    {
      "description": "Mouse: CMD + Mouse 3 to Show Desktop",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "f11"
          }
        }
      ]
    },
    {
      "description": "Mouse: Mouse 5 to Play/Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": {
            "key_code": "play_or_pause"
          }
        }
      ]
    },
    {
      "description": "HHKB: CMD + SHIFT + ALT + CTRL + P to Play / Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "key_code": "play_or_pause"
          }
        }
      ]
    },
    {
      "description": "HHKB: CMD + SHIFT + ALT + CTRL + N to Next",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["command", "shift", "option", "control"]
            }
          },
          "to": {
            "key_code": "fastforward"
          }
        }
      ]
    },
    {
      "description": "Mouse: CMD + Mouse 5 to Next Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": "command"
            }
          },
          "to": {
            "key_code": "fastforward"
          }
        }
      ]
    },
    {
      "description": "Mouse: OPT + Mouse 5 to Previous Track",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5",
            "modifiers": {
              "mandatory": "option"
            }
          },
          "to": {
            "key_code": "rewind"
          }
        }
      ]
    }
  ]
}