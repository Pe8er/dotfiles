{
	"name": "zmk-tools",
	"displayName": "ZMK Tools",
	"description": "Tools for working with ZMK Firmware",
	"version": "1.3.0",
	"publisher": "spadin",
	"license": "MIT",
	"author": {
		"name": "Joel Spadin"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/joelspadin/zmk-tools.git"
	},
	"icon": "images/zmk_logo.png",
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"browser": "./dist/web/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "dts",
				"aliases": [
					"Devicetree"
				],
				"extensions": [
					".keymap",
					".overlay"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "dts",
				"scopeName": "source.dts",
				"path": "./syntaxes/dts.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "ZMK Tools",
			"properties": {
				"zmk.configPath": {
					"type": "string",
					"description": "Workspace-relative path to the folder containing ZMK config files",
					"scope": "resource"
				},
				"zmk.buildMatrixPath": {
					"type": "string",
					"description": "Workspace-relative path to the build matrix file",
					"scope": "resource"
				}
			}
		},
		"commands": [
			{
				"command": "zmk.addKeyboard",
				"category": "ZMK",
				"title": "Add Keyboard"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"build-wasm": "tree-sitter build-wasm node_modules/tree-sitter-devicetree",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile",
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
		"run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. zmk"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/vscode": "^1.83.0",
		"@types/webpack-env": "^1.18.2",
		"@typescript-eslint/eslint-plugin": "^6.7.5",
		"@typescript-eslint/parser": "^6.7.5",
		"@vscode/test-web": "^0.0.47",
		"assert": "^2.1.0",
		"copy-webpack-plugin": "^11.0.0",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"mocha": "^10.2.0",
		"prettier": "^3.0.3",
		"process": "^0.11.10",
		"tree-sitter-cli": "^0.20.8",
		"tree-sitter-devicetree": "^0.6.0",
		"ts-loader": "^9.5.0",
		"typescript": "^5.2.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"yaml-loader": "^0.8.0"
	},
	"dependencies": {
		"cross-fetch": "^4.0.0",
		"eslint-config": "^0.3.0",
		"markdown-escape": "^2.0.0",
		"web-tree-sitter": "^0.20.8",
		"yaml": "^2.3.3"
	},
	"__metadata": {
		"id": "ce480628-7e07-443a-a020-45886ee2bb91",
		"publisherId": "42f068e7-828b-4134-bff2-63f4b368309e",
		"publisherDisplayName": "Joel Spadin",
		"targetPlatform": "undefined",
		"updated": false,
		"isPreReleaseVersion": false,
		"installedTimestamp": 1697483490141,
		"preRelease": false
	}
}