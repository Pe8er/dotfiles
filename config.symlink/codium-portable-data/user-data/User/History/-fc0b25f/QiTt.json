{
    "editor.fontSize": 13,
    "workbench.colorTheme": "Community Material Theme Darker",
    "workbench.iconTheme": "material-icon-theme",
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.enableDebugLogs": true,
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "editor.fontFamily": "JetBrainsMono-Regular, Monaco, Inconsolata-Regular, Menlo, 'Courier New', monospace",
    "betterAlign.surroundSpace": {
        "colon": [
            0,
            1
        ],
        "assignment": [
            1,
            1
        ],
        "arrow": [
            1,
            1
        ],
        "comment": 2
    },
    "autoalign.minSeparationLeft": 1,
    "autoalign.moveableItems": [
        "\\",
        ":",
        "+=",
        "-="
    ],
    "autoalign.separationRight": 0,
    "autoAlign.enabled": {
        "csv": true,
        "bsv": true,
        "sh": true
    },
    "align.by.regex.templates": {
        "abc": "=|,|:",
        "\\": "\\s\\\\$"
    }
}